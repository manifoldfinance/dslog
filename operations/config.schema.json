{
  "$id": "operations-config.spec.json",
  "$schema": "http://json-schema.org/schema#",
  "title": "Contract Operations",
  "description": "Configuration of smart contracts deployment, configuration and execution.",
  "version": "0.1.0",
  "definitions": {
    "ethaddress": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$"
    },
  "contractName": {
      "type": "string",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
    },
  "NetworkType": {
      "type": "string"
    },
    "Bytecode": {
      "type": "string",
      "pattern": "^0x0?$|^0x([a-fA-F0-9]{2}|__.{38})+$"
    },
  "SchemaVersion": {
      "type": "string",
      "pattern": "[0-9]+\\.[0-9]+\\.[0-9]+"
    }
  },
  "type": "object",
  "properties": {
    "ENS": {
      "type": "object",
      "properties": {
        "deployOwnRegistry": {
          "type": "boolean"
        },
        "ensRegistry": {
          "$ref": "#/definitions/ethaddress"
        },
        "domain": {
          "type": "string"
        }
      },
      "required": ["deployOwnRegistry"],
      "if": {
        "properties": {
          "deployOwnRegistry": {
            "const": false
          }
        }
      },
      "then": {
        "required": ["ensRegistry"]
      },
      "additionalProperties": false
    },
    "chainlog": {
      "type": "object",
      "properties": {
        "deployOwn": {
          "type": "boolean"
        },
        "factory": {
          "$ref": "#/definitions/ethaddress"
        },
        "registry": {
          "$ref": "#/definitions/ethaddress"
        }
      },
      "required": ["deployOwn"],
      "if": {
        "properties": {
          "deployOwn": {
            "const": false
          }
        }
      },
      "then": {
        "required": ["dappRegistry", "tokenRegistry"]
      },
      "additionalProperties": false
    },
    "defi": {
      "type": "object",
      "properties": {
        "uniswap": {
          "type": "object",
          "properties": {
            "factoryV2": {
              "$ref": "#/definitions/ethaddress"
            },
            "v2Router": {
              "$ref": "#/definitions/ethaddress"
            },
            "initCodeV2": {
              "type": "string"
            },
            "zap": {
              "$ref": "#/definitions/ethaddress"
            }
          }
        }
      }
    },
    "contracts": {
      "type": "object",
      "properties": {
        "MultiSigWallet": {
          "$ref": "#/definitions/ethaddress"
        },
        "WalletFactory": {
          "$ref": "#/definitions/ethaddress"
        },
        "ENSResolver": {
          "$ref": "#/definitions/ethaddress"
        },
        "ENSManager": {
          "$ref": "#/definitions/ethaddress"
        },
        "BaseWallet": {
          "$ref": "#/definitions/ethaddress"
        },
        "ProtocolConstants": {
          "$ref": "#/definitions/ethaddress"
        },
        "MultiCallHelper": {
          "$ref": "#/definitions/ethaddress"
        }
      },
      "required": [
        "MultiSigWallet",
        "WalletFactory",
        "ENSResolver",
        "ENSManager",
        "BaseWallet",
        "ProtocolConstants",
        "MultiCallHelper"
      ],
      "additionalProperties": true
    },
    "modules": {
      "type": "object",
      "properties": {
        "SpellStorage": {
          "$ref": "#/definitions/ethaddress"
        },
        "TransferStorage": {
          "$ref": "#/definitions/ethaddress"
        },
        "ProtocolModule": {
          "$ref": "#/definitions/ethaddress"
        }
      },
      "required": ["SpellStorage", "TransferStorage", "ProtocolModule"],
      "additionalProperties": true
    },
    "backend": {
      "type": "object",
      "properties": {
        "accounts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ethaddress"
          }
        },
        "refundCollector": {
          "$ref": "#/definitions/ethaddress"
        },
        "tradeCommissionCollector": {
          "$ref": "#/definitions/ethaddress"
        }
      },
      "required": ["accounts"],
      "additionalProperties": false
    },
    "multisig": {
      "type": "object",
      "properties": {
        "owners": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ethaddress"
          }
        },
        "threshold": {
          "type": "integer",
          "minimum": 1
        },
        "autosign": {
          "type": "boolean"
        }
      },
      "required": ["owners", "threshold"],
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "properties": {
        "deployer": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ganache", "infura", "jsonrpc"]
            },
            "options": {
              "type": "object"
            }
          },
          "required": ["type"],
          "additionalProperties": false
        },
        "privateKey": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["plain", "s3"]
            },
            "options": {
              "type": "object"
            }
          },
          "required": ["type"],
          "additionalProperties": false
        },
        "abiUpload": {
          "type": "object",
          "properties": {
            "bucket": {
              "type": "string"
            }
          },
          "required": ["bucket"],
          "additionalProperties": false
        },
        "versionUpload": {
          "type": "object",
          "properties": {
            "bucket": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "required": ["bucket", "url"],
          "additionalProperties": false
        },
        "lockPeriod": {
          "type": "integer"
        },
        "recoveryPeriod": {
          "type": "integer"
        },
        "securityPeriod": {
          "type": "integer"
        },
        "securityWindow": {
          "type": "integer"
        },
        "timelockPeriod": {
          "type": "integer"
        }
      },
      "required": ["deployer"],
      "additionalProperties": false
    }
  }
}
